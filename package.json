{
  "name": "liturgy",
  "version": "0.1.0",
  "description": "Library to handle Christian liturgical calendar queries, including lectionary readings.",
  "main": "index.js",
  "scripts": {
    "test": "mocha --require babel-core/register --recursive",
    "test:watch": "npm test -- --watch",
    "build:es": "BABEL_ENV=es babel src --out-dir es",
    "build:commonjs": "BABEL_ENV=commonjs babel src --out-dir lib",
    "build": "npm run build:commonjs && npm run build:es"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nathanjsharpe/liturgy.git"
  },
  "keywords": [
    "christian",
    "liturgy",
    "liturgical",
    "calendar",
    "easter",
    "feasts",
    "lectionary"
  ],
  "author": "Nathan Sharpe <nathanjsharpe@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nathanjsharpe/liturgy/issues"
  },
  "npmName": "liturgy",
  "npmFileMap": [
    {
      "basePath": "/dist/",
      "files": [
        "*.js"
      ]
    }
  ],
  "homepage": "https://github.com/nathanjsharpe/liturgy#readme",
  "devDependencies": {
    "babel-core": "^6.7.2",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "chai": "^3.5.0",
    "eslint": "^2.4.0",
    "eslint-config-airbnb": "^6.1.0",
    "eslint-plugin-react": "^4.2.3",
    "mocha": "^2.4.5"
  }
}
